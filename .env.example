# Aplicación
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sri_facturacion
DB_USER=root
DB_PASSWORD=your_password
DB_CONNECTION_LIMIT=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SRI Configuration
SRI_AMBIENTE=1  # 1: Pruebas, 2: Producción
SRI_TIMEOUT=30000
SRI_MAX_RETRIES=3

# URLs SRI - Ambiente de Pruebas
SRI_WS_RECEPCION_PRUEBAS=https://celcer.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
SRI_WS_AUTORIZACION_PRUEBAS=https://celcer.sri.gob.ec/comprobantes-electronicos-ws/AutorizacionComprobantesOffline?wsdl

# URLs SRI - Ambiente de Producción
SRI_WS_RECEPCION_PRODUCCION=https://cel.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
SRI_WS_AUTORIZACION_PRODUCCION=https://cel.sri.gob.ec/comprobantes-electronicos-ws/AutorizacionComprobantesOffline?wsdl

# Seguridad
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this
JWT_REFRESH_EXPIRES_IN=7d

# Encriptación
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_it
CERTIFICATE_ENCRYPTION_KEY=separate_32_char_key_for_certificates

# UANATACA Específico
UANATACA_COMPATIBILITY=true
CERTIFICATE_VALIDATION_STRICT=false
ALLOW_LEGACY_ALGORITHMS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880  # 5MB en bytes
ALLOWED_FILE_TYPES=.p12,.pfx

# Email Notifications (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=admin@example.com

# Monitoring (opcional)
ENABLE_METRICS=true
METRICS_PORT=9090